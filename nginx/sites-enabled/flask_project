server {

    listen 80;
    server_name _;
    server_tokens off;
    charset utf-8;

     location / {
        return 301 https://$host$request_uri;
    }

    location ~ /.well-known/acme-challenge {
                allow all;
                root /usr/src/app/static;
        }
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    server_name murhabazi.com;
    server_tokens off;

    ssl_certificate /etc/letsencrypt/live/murhabazi.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/murhabazi.com/privkey.pem;

    include /etc/dhparams/options-ssl-nginx.conf;
    ssl_dhparam /etc/dhparams/dhparams-2048.pem;

    location / {
        proxy_pass http://web:8000;
        proxy_set_header    Host                $http_host;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
    }

      location /static/ {
        autoindex on;
        alias /static/;
    }
}
